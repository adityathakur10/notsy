<body>
    <div class="main">
        <div class="navbar">
            <h1 id="Logo">NOTSY</h1>
            <div class="nav-btn">
                <div class="border">
                    <p>HOME</p>
                    <p>ABOUT US</p>
                    <p>DEVLOPERS</p>
                </div>
                <p><button class="login-button">Login</button></p>
                <p class="User">Hi, User <i class="fa-solid fa-circle-user"></i></p>
            </div>
        </div>

        <form hidden id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image"></input>
